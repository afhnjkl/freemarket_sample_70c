.credit-main
  .content-title
    %h2 クレジットカード情報入力
  .content-credit-card
    .content-credit-card__inner
      = form_with url: pay_card_index_path, method: :post, html: {name: "inputForm"} do |f|
        = f.label :カード番号, class: "label"
        %span.span 必須
        %br
          = f.text_field :card_number, class: "input_number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        .cards-icon
          = image_tag "/images/credit/visa.jpg", class: "credits_image"
          = image_tag "/images/credit/master.jpg", class: "credits_image"
          = image_tag "/images/credit/saison.jpg", class: "credits_image"
          = image_tag "/images/credit/jcb.jpg", class: "credits_image"
          = image_tag "/images/credit/american.jpg", class: "credits_image"
          = image_tag "/images/credit/diners.jpg", class: "credits_image"
          = image_tag "/images/credit/discover.jpg", class: "credits_image"

        .cards_expire
          = f.label :有効期限, class: "label"
          %span.span 必須
          %br
          .cards_expire__box
            .cards_expire__box__wrap
              = f.select :exp_month, [["--", ],["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'input-expire'
              %span.expire-text 月
            .cards_expire__box__wrap
              =f.select :exp_year, [["--", ],["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'input-expire'
              %span.expire-text 年
              %br
        .cards_expire
          = f.label :セキュリティコード, class: "label"
          %span.span 必須
          %br
            = f.text_field :cvc, type: "text", placeholder: "カード背面3~4桁の番号", maxlength: "4", class: "input_sequrity_code"
        .content-bottom#card_token
          = f.submit '追加する', class: 'content-bottom--add-btn', id: 'token_submit'
          